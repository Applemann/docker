#compdef dockerManager
_dockerManager() { 
    local curcontext="$curcontext" state line
    typeset -a opt_args
 
    _arguments '1: :->action' '*: :->'

    case $state in
    action)
        status_opts=(
            'start:start container'
            'restart:restart container'
            'stop:stop container' 
            'rm:remove container'
            'kill:stop and remove container'
            'logs:show container logs'
            'build:build image'
            'image:commands for image'
            'system:commands for system'
            'tag:create tag'
            'push:push image into dockerHub'
        )     
            _describe -t status-filter-opts "Actions:" status_opts && ret=0
        ;;
    *)
        case $words[2] in
        image)
            compadd "$@" prune
        ;;
        system)
            compadd "$@" prune
        ;;
        *)
            _files 
        esac
    esac
}
 
_dockerManager "$@"

